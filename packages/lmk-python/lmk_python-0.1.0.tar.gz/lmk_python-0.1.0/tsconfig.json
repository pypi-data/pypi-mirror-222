{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noEmit": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "target": "es2015",
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
